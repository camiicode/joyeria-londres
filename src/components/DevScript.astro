<script is:inline>
  window.addEventListener('DOMContentLoaded', function () {
    var domain = 'https://joyerialondres.com';

    // Selecciona todos los elementos del DOM
    var allElements = document.querySelectorAll('*');

    allElements.forEach(function (el) {
      var classAttr = el.getAttribute('class');
      if (classAttr) {
        // Busca coincidencias con bg-[url(/web/....)]
        var updatedClass = classAttr.replace(/bg-\[url\((\/web[^)]+)\)\]/g, function (match, p1) {
          return 'bg-[url(' + domain + p1 + ')]';
        });

        // Solo actualiza si hubo cambios
        if (updatedClass !== classAttr) {
          el.setAttribute('class', updatedClass);
        }
      }
    });
  });
</script>
